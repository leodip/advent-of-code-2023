    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch - day1_part1",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/day1_part1",
            "args": ["./data/input_day1.txt"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build task - day1_part1"
        },
